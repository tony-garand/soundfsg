<div class="post-author">
  <div class="author-content" style="margin:auto;">
    <h4>The Author</h4>
    <div class="row section-row">
      <div class="large-2 medium-10 small-12 column">
          {% set img = entry.author.authorImage %}
          {% set imgCrop = { mode: 'crop', width: 120, height: 120, quality: 100 } %}
          {% if img|length %}
          {% set img = img.one() %}
          <span class="author-image">
            <img src="{{ img.url(imgCrop) }}" width="{{ imgCrop.width }}" height="{{ imgCrop.width }}" alt="{{ img.altText|default(img.title) }}">
          </span>
          {% endif %}
      </div>
      <div class="large-10 medium-10 small-12 column">
        <h5>
          <span style="float:left;display:contents;">
            {% set authorName = entry.author.getFullName|length ? entry.author.getFullName : entry.author.username %}
            {{ authorName }}
          </span>
          <span style="float:right;">
            <a class="author-read-more button ghost" href="../authors/{{ entry.author.username|url_encode }}" title="Posts by {{ authorName }}">
              Read More
            </a>
          </span>
        </h5>
        <span style="float:left;">
        <h6>{{ entry.author.authorTitle }}</h6>
        <p>{{ entry.author.authorBio }}</p>
        </span>
      </div>
    </div>
  </div>
</div><!--post-author-->
