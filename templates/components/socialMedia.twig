<ul class="share-buttons">
  {% set currentPath = craft.app.request.absoluteUrl %}
  <li><a href="https://www.facebook.com/sharer/sharer.php?title={{ entry.title|default('') }}&u={{ currentPath }}" rel="nofollow" title="Share on Facebook" target="_blank"><img alt="Share on Facebook" src="/uploads/icons/Facebook.png" /></a></li>
  <li><a href="https://twitter.com/intent/tweet?text={{ entry.title|default('') }}&url={{ currentPath }}" rel="nofollow" target="_blank" title="Tweet"><img alt="Tweet" src="/uploads/icons/Twitter.png" /></a></li>
  <li><a href="https://www.linkedin.com/shareArticle?mini=true&title={{ entry.title|default('') }}&url={{ currentPath }}" rel="nofollow" title="Share on LinkedIn" target="_blank"><img alt="Share on LinkedIn" src="/uploads/icons/LinkedIn.png" /></a></li>
  <li><a href="mailto:?subject={{ entry.title|default('') }}&body={{ currentPath }}" target="_blank" rel="nofollow" title="Send email"><img alt="Send email" src="/uploads/icons/Email.png" /></a></li>
</ul>

<style>
ul.share-buttons{
  list-style: none;
  padding: 0;
}

ul.share-buttons li{
  display: inline;
}

ul.share-buttons .sr-only{
  position: absolute;
  clip: rect(1px 1px 1px 1px);
  clip: rect(1px, 1px, 1px, 1px);
  padding: 0;
  border: 0;
  height: 1px;
  width: 1px;
  overflow: hidden;
}
</style>
