<div class="sidebar-header">
	<h4>Authors</h4>
</div><!--sidebar-content-->
<div class="sidebar-content resource-authors">
		{# Create a user query with the 'group' parameter #}
		{% set myUserQuery = craft.users()
		    .group('author') %}
		{# Fetch the users #}
		{% set users = myUserQuery.all() %}
		{# Display the list #}
		<ul>
    {% for user in users %}
		{% set entryCount = craft.entries.section(['articles','videos','podcasts','books']).authorId(user.id).count() %}
        <li><a href="{{ url('../resources/authors/'~user.username) }}">{{ user.name }}<span class="post-count">{{ entryCount }}</span></a></li>
    {% endfor %}
		</ul>
</div><!--sidebar-content-->
