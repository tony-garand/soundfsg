<footer id="footer">
	<div class="footer-top">
		<div class="row align-top align-center">
			{% for block in footer.footerNav.level(1).all() %}
			<div class="large-2 medium-10 small-12 columns">
				<div class="content-block">
				{% for entry in block.children.all() %}
			    	{% include 'blockTypes/' ~ entry.type %}
			    {% endfor %}
				</div><!--content-block-->
			</div><!--columns-->
			{% endfor %}
			{% for block in footer.footerContent.level(1).all() %}
			<div class="large-10 medium-10 small-12 columns">
				<div class="content-block">
				{% if block.footerHeading|length %}
					<h3>{{ block.footerHeading }}</h3>
				{% endif %}
				{% for entry in block.children.all() %}
			    	{% include 'blockTypes/' ~ entry.type %}
			    {% endfor %}
				</div><!--content-block-->
			</div><!--columns-->
			{% endfor %}
		</div><!--row-->
	</div><!--footer-top-->

