<section class="podcast-section large-10 medium-12 small-12" style="margin:auto;">
  <div class="large-8 order-2 medium-6 small-12 resource-podcast-posts">
    	<div class="row section-row">
    		<div class="large-12 medium-12 small-12 column">
    			{% paginate craft.entries.section('podcasts').featured('1').limit(1) as info, posts %}
    			{% for post in posts %}
    			<article class="columns featured-podcast" >
    				<div class="large-12 medium-12 small-12 featured-podcast-post"><!--featured - podcast-post-->
    					<a href="{{post.url}}" title="{{ post.title }}">
    						<div class="podcast-image" alt="podcast-link">
    					</a>
    					</div><!--post-image-->
    					<div class="podcast-content">
    						<span class="post-meta">
    							<span class="date">{{ post.postDate|date('M j, Y') }}</span>
    						</span><!--post-meta-->
    						{% for cat in post.resourceCategories.all() %}
    						<span>
    							<a class="podcast-category" href="{{ cat.url }}" title="{{ cat.title }}">{{ cat.title }}</a>
    						</span>
    						{% endfor %}
    						<h3><a href="{{ post.url }}" title="{{ post.title }}">{{ post.title }}</a></h3>
    						<a href="{{ post.url }}" title="{{ post.title }}" class="play">Play</a>
    					</div><!--post-content-->
    				</div><!--featured-podcast-post-->
    			</article><!--columns-->
    			{% endfor %}
    			{% paginate craft.entries.section('podcasts').orderBy('postDate DESC').limit(2) as info, posts %}
    			{% for post in posts %}
    			<article class="large-6 medium-6 small-12" style="float:left;">
    				<div class="podcast-post">
    					<div class="post-image">
    						<a href="{{post.url}}" title="{{ post.title }}">
    							<div class="podcast-image" alt="podcast-link"></div>
    						</a>
    					</div><!--post-image-->
    					<div class="podcast-content">
    						<span class="post-meta">
    							<span class="date">{{ post.postDate|date('M j, Y') }}</span>
    						</span><!--post-meta-->
    						{% for cat in post.resourceCategories.all() %}
    						<span>
    							<a class="podcast-category" href="{{ cat.url }}" title="{{ cat.title }}">{{ cat.title }}</a>
    						</span>
    						{% endfor %}
    						<h3><a href="{{ post.url }}" title="{{ post.title }}">{{ post.title }}</a></h3>
    					</div><!--post-content-->
    				</div><!--podcast-post-->
    			</article><!--columns-->
    			{% endfor %}
    		</div>
    	</div><!--row-->
  </div>
  <div class="large-4 order-4 medium-6 small-12 resource-podcast-text" style="float:right;">
    <div class="section-content">
      {% if block.sectionHeaderHeading|length %}
      <h2>{{ block.sectionHeaderHeading }}</h2>
      {% endif %}
      {% if block.sectionHeaderText|length %}
      {{ block.sectionHeaderText }}
      {% endif %}
      {% if block.sectionFooterButtonText|length %}
      <a href="{{ siteUrl }}resources/{{ block.sectionFooterButtonUrl }}" class="button resource-podcast-button" style="width:220px; bottom:0; position:absolute;">{{ block.sectionFooterButtonText }}</a>
      {% endif %}
    </div>
  </div>
</section><!--page-section-->
